<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <TextView
        android:id="@+id/trainNameTextView"
        android:layout_width="80dp"
        android:layout_height="78dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/dateAndTimeTextView"
        android:layout_width="176dp"
        android:layout_height="77dp"
        android:layout_weight="1" />

    <!-- Button for Edit with Icon -->
    <Button
        android:id="@+id/editReservationButton"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@drawable/ic_edit_btn"
        android:drawablePadding="4dp"
        android:text="" />

    <!-- Button for Remove with Icon -->
    <Button
        android:id="@+id/removeReservationButton"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@drawable/ic_delete_icon"
        android:drawablePadding="4dp"
        android:text="" />
</LinearLayout>
