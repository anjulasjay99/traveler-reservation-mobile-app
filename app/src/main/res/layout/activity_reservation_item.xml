<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <TextView
        android:id="@+id/customerNameTextView"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/trainNameTextView"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/dateAndTimeTextView"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>

    <!-- Button for Edit with Icon -->
    <Button
        android:id="@+id/editReservationButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/ic_edit_btn"
        android:drawablePadding="4dp"
        android:text=""
        android:background="?android:attr/selectableItemBackground"/>

    <!-- Button for Remove with Icon -->
    <Button
        android:id="@+id/removeReservationButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/ic_delete_icon"
        android:drawablePadding="4dp"
        android:text=""
        android:background="?android:attr/selectableItemBackground"/>
</LinearLayout>
